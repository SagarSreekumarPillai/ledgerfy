# Database
MONGODB_URI=mongodb://localhost:27017/ledgerfy
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/ledgerfy

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Redis (for BullMQ workers)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage (S3/Supabase)
STORAGE_PROVIDER=local
STORAGE_BUCKET=ledgerfy-files
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
STORAGE_ENDPOINT=

# Supabase (alternative to S3)
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@ledgerfy.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# App Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv,xml,jpg,jpeg,png

# Compliance
COMPLIANCE_REMINDER_DAYS=7
COMPLIANCE_OVERDUE_REMINDER_DAYS=1

# Audit
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_EXPORT_MAX_ROWS=10000

# Tally Import
TALLY_IMPORT_MAX_FILE_SIZE=10485760
TALLY_IMPORT_ALLOWED_FORMATS=csv,xml,xlsx

# OCR (optional)
ENABLE_OCR=false
OCR_API_KEY=your-ocr-api-key
OCR_API_URL=https://api.ocr.space/parse/image

# Monitoring
ENABLE_MONITORING=false
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Development
DEBUG=false
SEED_DATA=true
MOCK_NOTIFICATIONS=true
